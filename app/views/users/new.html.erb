<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-neutral-50 via-accent-50 to-primary-50 p-4">
  <div class="w-full max-w-md">
    <div class="bg-white/80 backdrop-blur-sm rounded-3xl shadow-2xl border border-white/20 overflow-hidden">
      <!-- Header with AI Theme -->
      <div class="bg-gradient-to-r from-accent-600 via-accent-700 to-primary-600 px-8 py-8 text-center relative overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-10">
          <div class="absolute top-0 left-0 w-32 h-32 bg-white rounded-full -translate-x-16 -translate-y-16"></div>
          <div class="absolute top-0 right-0 w-24 h-24 bg-white rounded-full translate-x-12 -translate-y-12"></div>
          <div class="absolute bottom-0 left-0 w-20 h-20 bg-white rounded-full -translate-x-10 translate-y-10"></div>
        </div>
        
        <!-- AI Icon -->
        <div class="relative z-10 mb-4">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 rounded-2xl backdrop-blur-sm">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
          </div>
        </div>
        
        <h1 class="text-3xl font-bold text-white mb-2 font-ai">Create Account</h1>
        <p class="text-accent-100 text-lg">Join your AI memory assistant</p>
      </div>

      <!-- Form -->
      <div class="px-8 py-8">
        <%= form_with model: @user, class: "space-y-6" do |form| %>
          <% if @user.errors.any? %>
            <div class="bg-error-50 border border-error-200 rounded-xl p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-error-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-error-800">
                    There were <%= pluralize(@user.errors.count, "error") %> with your submission:
                  </h3>
                  <div class="mt-2 text-sm text-error-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div>
            <label for="user_email_address" class="block text-sm font-medium text-neutral-700 mb-3">
              Email Address
            </label>
            <div class="relative group">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-neutral-400 group-focus-within:text-accent-500 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                </svg>
              </div>
              <%= form.email_field :email_address, 
                  id: "user_email_address",
                  required: true,
                  class: "block w-full pl-12 pr-4 py-4 border #{@user.errors[:email_address].any? ? 'border-error-300' : 'border-neutral-200'} rounded-xl focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-all duration-200 bg-white/50 backdrop-blur-sm hover:bg-white/70 focus:bg-white",
                  placeholder: "Enter your email address" %>
            </div>
            <% if @user.errors[:email_address].any? %>
              <p class="mt-2 text-sm text-error-600"><%= @user.errors[:email_address].first %></p>
            <% end %>
          </div>

          <div>
            <label for="user_password" class="block text-sm font-medium text-neutral-700 mb-3">
              Password
            </label>
            <div class="relative group">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-neutral-400 group-focus-within:text-accent-500 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </div>
              <%= form.password_field :password, 
                  id: "user_password",
                  required: true,
                  class: "block w-full pl-12 pr-4 py-4 border #{@user.errors[:password].any? ? 'border-error-300' : 'border-neutral-200'} rounded-xl focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-all duration-200 bg-white/50 backdrop-blur-sm hover:bg-white/70 focus:bg-white",
                  placeholder: "Create a password" %>
            </div>
            <% if @user.errors[:password].any? %>
              <p class="mt-2 text-sm text-error-600"><%= @user.errors[:password].first %></p>
            <% end %>
          </div>

          <div>
            <label for="user_password_confirmation" class="block text-sm font-medium text-neutral-700 mb-3">
              Confirm Password
            </label>
            <div class="relative group">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-neutral-400 group-focus-within:text-accent-500 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <%= form.password_field :password_confirmation, 
                  id: "user_password_confirmation",
                  required: true,
                  class: "block w-full pl-12 pr-4 py-4 border #{@user.errors[:password_confirmation].any? ? 'border-error-300' : 'border-neutral-200'} rounded-xl focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-all duration-200 bg-white/50 backdrop-blur-sm hover:bg-white/70 focus:bg-white",
                  placeholder: "Confirm your password" %>
            </div>
            <% if @user.errors[:password_confirmation].any? %>
              <p class="mt-2 text-sm text-error-600"><%= @user.errors[:password_confirmation].first %></p>
            <% end %>
          </div>

          <div class="flex items-start">
            <input id="terms" name="terms" type="checkbox" required class="h-4 w-4 text-accent-600 focus:ring-accent-500 border-neutral-300 rounded transition-colors duration-200 mt-1">
            <label for="terms" class="ml-3 block text-sm text-neutral-700">
              I agree to the 
              <a href="#" class="text-accent-600 hover:text-accent-700 transition-colors duration-200 font-medium">Terms of Service</a>
              and
              <a href="#" class="text-accent-600 hover:text-accent-700 transition-colors duration-200 font-medium">Privacy Policy</a>
            </label>
          </div>

          <div>
            <%= form.submit "Create Account", 
                class: "w-full flex justify-center py-4 px-6 border border-transparent rounded-xl shadow-lg text-base font-semibold text-white bg-gradient-to-r from-accent-600 to-primary-600 hover:from-accent-700 hover:to-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-500 transition-all duration-200 transform hover:scale-105 hover:shadow-xl active:scale-95" %>
          </div>
        <% end %>

        <!-- Divider -->
        <div class="mt-8">
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-neutral-200"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-4 bg-white/80 text-neutral-500 font-medium">Already have an account?</span>
            </div>
          </div>
        </div>

        <!-- Login Link -->
        <div class="mt-6">
          <%= link_to new_session_path, 
              class: "w-full flex justify-center py-4 px-6 border border-neutral-200 rounded-xl shadow-sm text-base font-medium text-neutral-700 bg-white/80 backdrop-blur-sm hover:bg-white hover:border-accent-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-500 transition-all duration-200 hover:shadow-md" do %>
            Sign in instead
          <% end %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="mt-8 text-center">
      <p class="text-sm text-neutral-500">
        Â© 2024 Llm Memory. Powered by AI.
      </p>
    </div>
  </div>
</div>
