<div class="min-h-screen" style="background: linear-gradient(135deg, var(--color-neutral-50), var(--color-primary-50), var(--color-secondary-50));">
  <!-- Header -->
  <div class="bg-white/80 backdrop-blur-sm border-b border-white/20 shadow-lg">
    <div class="max-w-7xl mx-auto px-6 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, var(--color-primary-600), var(--color-secondary-600));">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-neutral-900 font-ai">AI Chat</h1>
            <p class="text-neutral-600">Your conversation history</p>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <%= link_to dashboard_path, 
              class: "inline-flex items-center px-4 py-2 border border-neutral-200 text-neutral-700 bg-white/80 backdrop-blur-sm rounded-xl hover:bg-white hover:border-primary-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Dashboard
          <% end %>
          
          <%= link_to chats_path, 
              data: { turbo_method: :post },
              class: "btn-primary" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            New Chat
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-6 py-8">
    <% if @chats.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @chats.each do |chat| %>
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-lg hover:shadow-xl transition-all duration-200 hover:-translate-y-1 group relative">
            <!-- Delete Button -->
            <div class="absolute top-4 right-4 z-10">
              <%= button_to chat_path(chat), 
                  class: "w-8 h-8 bg-red-100 hover:bg-red-200 text-red-600 rounded-full flex items-center justify-center transition-colors duration-200 opacity-0 group-hover:opacity-100",
                  data: { 
                    turbo_confirm: "Are you sure you want to delete this chat?",
                    turbo_method: :delete
                  } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
            
            <%= link_to chat_path(chat), class: "block" do %>
              <div class="flex items-center justify-between mb-4">
                <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, var(--color-primary-500), var(--color-secondary-500));">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
                </div>
                <span class="text-xs text-neutral-500 bg-neutral-100 px-2 py-1 rounded-full">
                  <%= chat.model_id&.upcase || 'GPT-4O' %>
                </span>
              </div>
              
              <h3 class="text-lg font-semibold text-neutral-900 mb-2 group-hover:text-primary-600 transition-colors duration-200">
                Chat #<%= chat.id %>
              </h3>
              
              <p class="text-neutral-600 text-sm mb-4">
                <%= pluralize(chat.messages.count, 'message') %>
              </p>
              
              <div class="flex items-center justify-between text-xs text-neutral-500">
                <span>Created <%= time_ago_in_words(chat.created_at) %> ago</span>
                <span class="group-hover:translate-x-1 transition-transform duration-200">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-20">
        <div class="w-32 h-32 rounded-full flex items-center justify-center mx-auto mb-8" style="background: linear-gradient(135deg, var(--color-primary-100), var(--color-secondary-100));">
          <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: var(--color-primary-600);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-neutral-900 mb-4 font-ai">Start Your First Chat</h3>
        <p class="text-lg text-neutral-600 mb-8 max-w-md mx-auto">
          Begin a conversation with AI to explore ideas, get answers, or simply chat about anything on your mind.
        </p>
        <%= link_to chats_path, 
            data: { turbo_method: :post },
            class: "btn-primary text-lg px-6 py-3" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Start New Chat
        <% end %>
      </div>
    <% end %>
  </div>
</div>
