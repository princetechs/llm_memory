<div class="min-h-screen bg-gradient-to-br from-neutral-50 via-primary-50 to-secondary-50">
  <!-- Header -->
  <div class="bg-white/80 backdrop-blur-sm border-b border-white/20 shadow-lg">
    <div class="max-w-7xl mx-auto px-6 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-neutral-900 font-ai">Chat #<%= @chat.id %></h1>
            <p class="text-neutral-600">
              <%= @chat.model_id&.upcase || 'GPT-4O' %> â€¢ 
              <%= pluralize(@messages.count, 'message') %>
            </p>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <%= link_to chats_path, 
              class: "inline-flex items-center px-4 py-2 border border-neutral-200 text-neutral-700 bg-white/80 backdrop-blur-sm rounded-xl hover:bg-white hover:border-primary-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            All Chats
          <% end %>
          
          <%= link_to chats_path, method: :post,
              class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-primary-600 to-secondary-600 text-white rounded-xl hover:from-primary-700 hover:to-secondary-700 focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            New Chat
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Flash Messages -->
  <% if flash[:error] %>
    <div class="max-w-4xl mx-auto px-6 py-4">
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl">
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <%= flash[:error] %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Chat Container -->
  <div class="max-w-4xl mx-auto px-6 py-8">
    <div class="bg-white/80 backdrop-blur-sm rounded-3xl border border-white/20 shadow-lg overflow-hidden">
      <!-- Messages Area -->
      <div class="h-96 overflow-y-auto p-6 space-y-6" id="messages-container">
        <% if @messages.any? %>
          <% @messages.each do |message| %>
            <div class="flex <%= message.role == 'user' ? 'justify-end' : 'justify-start' %>">
              <div class="max-w-3xl <%= message.role == 'user' ? 'bg-gradient-to-r from-primary-500 to-secondary-500 text-white' : 'bg-neutral-100 text-neutral-900' %> rounded-2xl px-4 py-3 shadow-sm">
                <div class="flex items-start space-x-3">
                  <% if message.role == 'assistant' %>
                    <div class="w-8 h-8 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                      </svg>
                    </div>
                  <% end %>
                  
                  <div class="flex-1">
                    <div class="text-sm font-medium mb-1">
                      <%= message.role == 'user' ? 'You' : 'AI Assistant' %>
                    </div>
                    <div class="prose prose-sm max-w-none">
                      <%= simple_format(message.content) %>
                    </div>
                    <% if message.input_tokens || message.output_tokens %>
                      <div class="text-xs opacity-70 mt-2">
                        <% if message.input_tokens %>
                          <span class="mr-3">Input: <%= message.input_tokens %> tokens</span>
                        <% end %>
                        <% if message.output_tokens %>
                          <span>Output: <%= message.output_tokens %> tokens</span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                  
                  <% if message.role == 'user' %>
                    <div class="w-8 h-8 bg-white rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <!-- Welcome Message -->
          <div class="text-center py-12">
            <div class="w-20 h-20 bg-gradient-to-r from-primary-100 to-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-neutral-900 mb-2">Start a Conversation</h3>
            <p class="text-neutral-600">Ask me anything! I'm here to help with questions, explanations, or just casual chat.</p>
          </div>
        <% end %>
      </div>

      <!-- Input Area -->
      <div class="border-t border-white/20 p-6">
        <%= form_with model: [@chat, Message.new], local: true, class: "flex space-x-4", data: { controller: "chat-form" } do |f| %>
          <div class="flex-1 relative">
            <%= f.text_area :content, 
                placeholder: "Type your message here...",
                rows: 1,
                class: "w-full px-4 py-3 border border-neutral-200 rounded-2xl focus:ring-2 focus:ring-primary-500 focus:border-transparent resize-none transition-all duration-200",
                data: { 
                  controller: "auto-resize",
                  action: "input->auto-resize#resize"
                } %>
          </div>
          
          <%= f.submit "Send", 
              class: "px-6 py-3 bg-gradient-to-r from-primary-600 to-secondary-600 text-white rounded-2xl hover:from-primary-700 hover:to-secondary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-200 font-medium flex items-center space-x-2",
              data: { 
                disable_with: "Sending...",
                action: "click->chat-form#submit"
              } %>
        <% end %>
        
        <div class="mt-3 text-xs text-neutral-500 text-center">
          Powered by <%= @chat.model_id&.upcase || 'GPT-4O' %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Loading Overlay -->
<div id="loading-overlay" class="fixed inset-0 bg-black/20 backdrop-blur-sm hidden z-50">
  <div class="flex items-center justify-center min-h-screen">
    <div class="bg-white rounded-2xl p-8 shadow-2xl">
      <div class="flex items-center space-x-4">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
        <div class="text-lg font-medium text-neutral-900">AI is thinking...</div>
      </div>
    </div>
  </div>
</div>

<script>
  // Auto-scroll to bottom of messages
  document.addEventListener('DOMContentLoaded', function() {
    const messagesContainer = document.getElementById('messages-container');
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
    
    // Show loading overlay when form is submitted
    const form = document.querySelector('form');
    const loadingOverlay = document.getElementById('loading-overlay');
    
    form.addEventListener('submit', function() {
      loadingOverlay.classList.remove('hidden');
    });
  });
</script>
