<div class="min-h-screen" style="background: linear-gradient(135deg, var(--color-neutral-50), var(--color-primary-50), var(--color-secondary-50));">
  <!-- Header -->
  <div class="bg-white/80 backdrop-blur-sm border-b border-white/20 shadow-lg">
    <div class="max-w-7xl mx-auto px-6 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, var(--color-primary-600), var(--color-secondary-600));">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-neutral-900 font-ai">Memory Management</h1>
            <p class="text-neutral-600">View and manage your AI memories</p>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <nav class="flex items-center space-x-4">
            <%= link_to dashboard_path, class: "text-neutral-700 hover:text-neutral-900 px-3 py-2 rounded-lg hover:bg-white/50 transition-colors duration-200" do %>
              Dashboard
            <% end %>
            <%= link_to chats_path, class: "text-neutral-700 hover:text-neutral-900 px-3 py-2 rounded-lg hover:bg-white/50 transition-colors duration-200" do %>
              Chats
            <% end %>
            <%= link_to memories_path, class: "text-neutral-700 hover:text-neutral-900 px-3 py-2 rounded-lg hover:bg-white/50 transition-colors duration-200" do %>
              Memories
            <% end %>
          </nav>
          <%= link_to session_path, method: :delete, 
              class: "inline-flex items-center px-4 py-2 border border-neutral-200 text-neutral-700 bg-white/80 backdrop-blur-sm rounded-xl hover:bg-white hover:border-error-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-error-500 transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            Sign Out
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-6 py-8">
    <!-- Stats and Search -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-lg">
        <div class="text-center">
          <p class="text-3xl font-bold text-neutral-900"><%= @stats[:total_memories] %></p>
          <p class="text-sm text-neutral-600">Total Memories</p>
        </div>
      </div>
      
      <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-lg">
        <div class="text-center">
          <p class="text-3xl font-bold text-neutral-900"><%= @stats[:by_importance][:high] %></p>
          <p class="text-sm text-neutral-600">High Priority</p>
        </div>
      </div>
      
      <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-lg">
        <div class="text-center">
          <p class="text-3xl font-bold text-neutral-900"><%= @stats[:categories].length %></p>
          <p class="text-sm text-neutral-600">Categories</p>
        </div>
      </div>
      
      <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-lg">
        <div class="text-center">
          <p class="text-3xl font-bold text-neutral-900"><%= @stats[:tags].length %></p>
          <p class="text-sm text-neutral-600">Tags</p>
        </div>
      </div>
    </div>

    <!-- Search and Filters -->
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-lg mb-8">
      <h3 class="text-xl font-bold text-neutral-900 mb-4">Search & Filter</h3>
      <%= form_with url: search_memories_path, method: :get, local: true, class: "flex flex-wrap gap-4" do |f| %>
        <div class="flex-1 min-w-64">
          <%= f.text_field :query, 
              placeholder: "Search memories...", 
              value: params[:query],
              class: "w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" %>
        </div>
        
        <div class="min-w-48">
          <%= f.select :category, 
              options_for_select([['All Categories', '']] + @stats[:categories].map { |c| [c.titleize, c] }), 
              { selected: params[:category] },
              { class: "w-full px-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" } %>
        </div>
        
        <%= f.submit "Search", 
            class: "px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-200" %>
      <% end %>
    </div>

    <!-- Memories List -->
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-lg">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-bold text-neutral-900">Your Memories</h3>
        <div class="flex space-x-2">
          <%= link_to export_memories_path(format: :json), 
              class: "px-4 py-2 text-sm border border-neutral-300 text-neutral-700 rounded-lg hover:bg-neutral-50 transition-colors duration-200" do %>
            Export JSON
          <% end %>
          <%= link_to export_memories_path(format: :csv), 
              class: "px-4 py-2 text-sm border border-neutral-300 text-neutral-700 rounded-lg hover:bg-neutral-50 transition-colors duration-200" do %>
            Export CSV
          <% end %>
        </div>
      </div>

      <% if @memories.any? %>
        <div class="space-y-4">
          <% @memories.each do |memory| %>
            <div class="flex items-start space-x-4 p-4 bg-neutral-50/50 rounded-xl border border-neutral-200/50 hover:bg-neutral-100/50 transition-colors duration-200">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 rounded-full flex items-center justify-center text-xs font-medium
                  <%= case memory['importance']
                      when 'high' then 'bg-red-100 text-red-700'
                      when 'medium' then 'bg-yellow-100 text-yellow-700'
                      else 'bg-green-100 text-green-700'
                      end %>">
                  <%= memory['importance'].first.upcase %>
                </div>
              </div>
              
              <div class="flex-1 min-w-0">
                <p class="text-sm text-neutral-900 font-medium"><%= memory['content'] %></p>
                <div class="flex items-center space-x-2 mt-2">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-neutral-100 text-neutral-700">
                    <%= memory['category'] %>
                  </span>
                  <% memory['tags'].first(5).each do |tag| %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-primary-100 text-primary-700">
                      <%= tag %>
                    </span>
                  <% end %>
                </div>
                <p class="text-xs text-neutral-500 mt-2">
                  Created: <%= time_ago_in_words(Time.parse(memory['created_at'])) %> ago
                  <% if memory['updated_at'] && memory['updated_at'] != memory['created_at'] %>
                    â€¢ Updated: <%= time_ago_in_words(Time.parse(memory['updated_at'])) %> ago
                  <% end %>
                </p>
              </div>
              
              <div class="flex-shrink-0">
                <div class="flex space-x-2">
                  <%= form_with url: update_importance_memory_path(memory['id']), method: :patch, local: true, class: "inline" do |f| %>
                    <%= f.select :importance, 
                        options_for_select([['Low', 'low'], ['Medium', 'medium'], ['High', 'high']], memory['importance']),
                        {},
                        { class: "text-xs border border-neutral-300 rounded px-2 py-1",
                          onchange: "this.form.submit()" } %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-24 h-24 bg-neutral-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-12 h-12 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h4 class="text-lg font-medium text-neutral-600 mb-2">No memories found</h4>
          <p class="text-neutral-500">Start chatting with AI to create memories, or adjust your search criteria</p>
          <%= link_to chats_path, class: "inline-flex items-center px-4 py-2 mt-4 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors duration-200" do %>
            Start Chatting
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
