<div class="min-h-screen bg-gradient-to-br from-neutral-50 via-primary-50 to-secondary-50">
  <!-- Header -->
  <div class="bg-white/80 backdrop-blur-sm border-b border-white/20 shadow-lg">
    <div class="max-w-7xl mx-auto px-6 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-neutral-900 font-ai">Llm Memory</h1>
            <p class="text-neutral-600">AI-powered memory assistant</p>
          </div>
        </div>
        
        <div class="flex items-center space-x-4">
          <div class="text-right">
            <p class="text-sm text-neutral-600">Welcome back</p>
            <p class="text-neutral-900 font-medium"><%= @user.email_address %></p>
          </div>
          <%= link_to session_path, method: :delete, 
              class: "inline-flex items-center px-4 py-2 border border-neutral-200 text-neutral-700 bg-white/80 backdrop-blur-sm rounded-xl hover:bg-white hover:border-error-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-error-500 transition-all duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            Sign Out
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-6 py-8">
    <!-- Welcome Section -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-r from-primary-100 to-secondary-100 rounded-3xl mb-6">
        <svg class="w-12 h-12 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      </div>
      <h2 class="text-4xl font-bold text-neutral-900 mb-4 font-ai">Welcome back, <%= @user.email_address %></h2>
      <p class="text-xl text-neutral-600 max-w-2xl mx-auto">Your AI memory assistant is ready to help you remember, organize, and retrieve information with intelligent insights.</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-lg hover:shadow-xl transition-all duration-200 hover:-translate-y-1">
        <div class="flex items-center">
          <div class="p-3 bg-primary-100 rounded-xl">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-neutral-600">Total Memories</p>
            <p class="text-3xl font-bold text-neutral-900">0</p>
          </div>
        </div>
      </div>

      <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-lg hover:shadow-xl transition-all duration-200 hover:-translate-y-1">
        <div class="flex items-center">
          <div class="p-3 bg-secondary-100 rounded-xl">
            <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-neutral-600">AI Interactions</p>
            <p class="text-3xl font-bold text-neutral-900">0</p>
          </div>
        </div>
      </div>

      <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-lg hover:shadow-xl transition-all duration-200 hover:-translate-y-1">
        <div class="flex items-center">
          <div class="p-3 bg-accent-100 rounded-xl">
            <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-neutral-600">Last Active</p>
            <p class="text-3xl font-bold text-neutral-900">Now</p>
          </div>
        </div>
      </div>

      <div class="bg-white/80 backdrop-blur-sm rounded-2xl border border-white/20 p-6 shadow-lg hover:shadow-xl transition-all duration-200 hover:-translate-y-1">
        <div class="flex items-center">
          <div class="p-3 bg-warning-100 rounded-xl">
            <svg class="w-6 h-6 text-warning-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-neutral-600">AI Status</p>
            <p class="text-3xl font-bold text-neutral-900">Ready</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white/80 backdrop-blur-sm rounded-3xl border border-white/20 p-8 shadow-lg mb-12">
      <h3 class="text-2xl font-bold text-neutral-900 mb-6 font-ai">Quick Actions</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <button class="group p-6 bg-gradient-to-br from-primary-50 to-primary-100 border border-primary-200 rounded-2xl hover:from-primary-100 hover:to-primary-200 transition-all duration-200 transform hover:scale-105 hover:shadow-lg">
          <div class="flex items-center justify-center w-12 h-12 bg-primary-500 rounded-xl mb-4 group-hover:bg-primary-600 transition-colors duration-200">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-neutral-900 mb-2">Create New Memory</h4>
          <p class="text-neutral-600 text-sm">Store new information with AI assistance</p>
        </button>
        
        <button class="group p-6 bg-gradient-to-br from-secondary-50 to-secondary-100 border border-secondary-200 rounded-2xl hover:from-secondary-100 hover:to-secondary-200 transition-all duration-200 transform hover:scale-105 hover:shadow-lg">
          <div class="flex items-center justify-center w-12 h-12 bg-secondary-500 rounded-xl mb-4 group-hover:bg-secondary-600 transition-colors duration-200">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-neutral-900 mb-2">Search Memories</h4>
          <p class="text-neutral-600 text-sm">Find information using natural language</p>
        </button>

        <%= link_to chats_path, class: "group p-6 bg-gradient-to-br from-accent-50 to-accent-100 border border-accent-200 rounded-2xl hover:from-accent-100 hover:to-accent-200 transition-all duration-200 transform hover:scale-105 hover:shadow-lg" do %>
          <div class="flex items-center justify-center w-12 h-12 bg-accent-500 rounded-xl mb-4 group-hover:bg-accent-600 transition-colors duration-200">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h4 class="text-lg font-semibold text-neutral-900 mb-2">AI Chat</h4>
          <p class="text-neutral-600 text-sm">Ask questions and get intelligent answers</p>
        <% end %>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white/80 backdrop-blur-sm rounded-3xl border border-white/20 p-8 shadow-lg">
      <h3 class="text-2xl font-bold text-neutral-900 mb-6 font-ai">Recent Activity</h3>
      <div class="text-center py-12">
        <div class="w-24 h-24 bg-neutral-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-12 h-12 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h4 class="text-lg font-medium text-neutral-600 mb-2">No activity yet</h4>
        <p class="text-neutral-500">Start creating memories to see your activity here</p>
      </div>
    </div>
  </div>
</div>
